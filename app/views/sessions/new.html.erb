<div class="container">
	<div class="div-3">
	</div>
	<div class="div-6">
	  <% if flash[:alert] %>
    	<div class="alert alert-info"><%= flash[:alert] %></div>
  	<% end %>
		<p>Don't have an account? <%= link_to "Sign up", new_user_path %></p>
		<%=form_tag log_in_path do%>
		<div class="form-group">
			<%=label_tag :username %>
			<%=text_field_tag :username, nil, class: 'form-control', autofocus: true %>
		</div>
		<div class="form-group">
			<%=label_tag :password %>
			<%=password_field_tag :password, nil, class: 'form-control' %>
		</div>
		<%=submit_tag "Log in" %>
		<%end %>
	</div>
	<div class="div-3">
	</div>
</div>